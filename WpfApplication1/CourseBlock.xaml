<UserControl x:Name="userControlBlock" x:Class="WpfApplication1.CourseBlock"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             Height="146" Width="299"  MouseUp="OnMouseUp" MouseDown="OnMouseDown">
    <Grid HorizontalAlignment="Left" Height="146" Margin="0,-1,0,-128" VerticalAlignment="Top" Width="299" Background="White">
        <Canvas x:Name="canvas" HorizontalAlignment="Left" Height="146" Margin="0,-1,0,-145" VerticalAlignment="Top" Width="299" Background="White">
            <Border x:Name="border" BorderBrush="Black" BorderThickness="1" Height="146" Width="299">
                <Image x:Name="triangle" HorizontalAlignment="Left" Height="35" Margin="251,11,0,0" VerticalAlignment="Top" Width="37" Source="Untitled.png" Visibility="Hidden" ToolTip="You are WaitListed in this course"/>
            </Border>
            <Label x:Name="courselbl" Content="COURSE" Height="26" Canvas.Top="11" Width="42" Canvas.Left="10"/>
            <Label x:Name="courseNamelbl" Content="Name" Height="26" Canvas.Left="85" Canvas.Top="10" Width="154"/>
            <Label x:Name="typelbl" Content="Type" Height="26" Canvas.Left="10" Canvas.Top="37" Width="97"/>
            <Label Content="Prof : " Height="26" Canvas.Left="10" Canvas.Top="63" Width="38"/>
            <Label x:Name="proflbl" Content="ProfName" Height="26" Canvas.Left="53" Canvas.Top="63" Width="186"/>
            <Label x:Name="timeslbl" Content="Times" Height="26" Canvas.Left="10" Canvas.Top="86" Width="229"/>
            <Label x:Name="detailslbl" Content="Hover for Details" Height="23" Canvas.Left="10" Canvas.Top="112" Width="117" Foreground="#FF4B87F0"/>
            <Button x:Name="WaitlistBtn" Content="Waitlist" Height="24" Canvas.Left="187" Canvas.Top="112" Width="102" Click="Button_Click" BorderBrush="#FF040404" Background="White" FontSize="14" ToolTip="Click To Waitlist in this Course" Margin="0" Visibility="Hidden"/>
            <Ellipse x:Name="circle" Fill="#FF4CD62D" Height="25" Canvas.Left="254" Canvas.Top="10" Width="25" ToolTip="Class is Open" Visibility="Hidden"/>
            <Rectangle x:Name="square" Fill="#FF2379CF" Height="25" Canvas.Left="254" Canvas.Top="10" Width="25" ToolTip="Class is Closed" Visibility="Hidden"/>
            <Label x:Name="courseNumlbl" Content="000" Height="25" Canvas.Left="52" Canvas.Top="11" Width="33"/>
        </Canvas>
    </Grid>
</UserControl>
